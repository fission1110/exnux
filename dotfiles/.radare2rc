
# Search in all mapped memory
e search.in = dbg.maps

# Set default v layout
e scr.layout = default

# Idk what this does, but I think it lets the decompiler work
e scr.slow = true

# Use less
e scr.pager = less -R

# vim mode
e scr.prompt.vi = true

# popup completion menu
e scr.prompt.popup = true

# Use ghidra as the default decompiler
e cmd.pdc = pdg

# Esil emulation
#e asm.emu = true
#e asm.esil = true
e asm.section = true

# Describe the asm in comments
e asm.describe = true

e scr.utf8 = true
e scr.utf8.curvy = true

# Theme terafox generated by..
# in vim
#   :colorscheme terafox
#   :redir > highlight.vim
#   :hi
#   :redir END
#   :e highlight.vim
#   :%s/^\w/:hi \0/
# node vim2r2.js < highlight.vim > terafox.r2
#ec other rgb:245
ec other rgb:7ab # 245 is too dark
ec call rgb:7ab
ec trap rgb:cdd
ec help rgb:234
ec flow rgb:59a
ec offset rgb:577
ec prompt rgb:cdd
ec flag rgb:7ab
ec num rgb:a57
ec jmp rgb:7ab
ec ujmp rgb:7ab
ec cjmp rgb:7ab
ec reg rgb:fa7
ec comment rgb:678
ec nop bg
